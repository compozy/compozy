{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-search-depth": 400,
  "commit-search-depth": 500,
  "pull-request-header": "This PR was generated by Release Please. See [documentation](https://github.com/googleapis/release-please#readme).",
  "separate-pull-requests": false,
  "group-pull-request-title-pattern": "ci(release): Releasing new version v${version}",
  "packages": {
    ".": {
      "release-type": "go",
      "package-name": "compozy",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "versioning": "default",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features",
          "hidden": false
        },
        {
          "type": "fix",
          "section": "Bug Fixes",
          "hidden": false
        },
        {
          "type": "perf",
          "section": "Performance Improvements",
          "hidden": false
        },
        {
          "type": "revert",
          "section": "Reverts",
          "hidden": false
        },
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": false
        },
        {
          "type": "style",
          "section": "Styles",
          "hidden": true
        },
        {
          "type": "chore",
          "section": "Miscellaneous Chores",
          "hidden": true
        },
        {
          "type": "refactor",
          "section": "Code Refactoring",
          "hidden": false
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        },
        {
          "type": "build",
          "section": "Build System",
          "hidden": true
        },
        {
          "type": "ci",
          "section": "Continuous Integration",
          "hidden": true
        },
        {
          "type": "deps",
          "section": "Dependencies",
          "hidden": false
        },
        {
          "type": "security",
          "section": "Security",
          "hidden": false
        }
      ],
      "pull-request-title-pattern": "ci(release): Releasing new version v${version}",
      "tag-separator": "-",
      "extra-files": [
        {
          "type": "generic",
          "path": "cmd/compozy/main.go",
          "glob": false
        },
        {
          "type": "generic",
          "path": "pkg/version/version.go",
          "glob": false
        }
      ]
    },
    "cmd/mcp-proxy": {
      "release-type": "go",
      "package-name": "compozy-mcp-proxy",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-",
      "versioning": "default",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features",
          "hidden": false
        },
        {
          "type": "fix",
          "section": "Bug Fixes",
          "hidden": false
        },
        {
          "type": "perf",
          "section": "Performance Improvements",
          "hidden": false
        },
        {
          "type": "revert",
          "section": "Reverts",
          "hidden": false
        },
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": false
        },
        {
          "type": "style",
          "section": "Styles",
          "hidden": true
        },
        {
          "type": "chore",
          "section": "Miscellaneous Chores",
          "hidden": true
        },
        {
          "type": "refactor",
          "section": "Code Refactoring",
          "hidden": false
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        },
        {
          "type": "build",
          "section": "Build System",
          "hidden": true
        },
        {
          "type": "ci",
          "section": "Continuous Integration",
          "hidden": true
        },
        {
          "type": "deps",
          "section": "Dependencies",
          "hidden": false
        },
        {
          "type": "security",
          "section": "Security",
          "hidden": false
        }
      ],
      "pull-request-title-pattern": "ci(release): Releasing compozy-mcp-proxy v${version}",
      "extra-files": [
        {
          "type": "generic",
          "path": "cmd/mcp-proxy/main.go",
          "glob": false
        },
        {
          "type": "generic",
          "path": "pkg/version/version.go",
          "glob": false
        }
      ]
    },
    "tools/delete-file": {
      "release-type": "node",
      "package-name": "@compozy/tool-delete-file",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/exec": {
      "release-type": "node",
      "package-name": "@compozy/tool-exec",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/fetch": {
      "release-type": "node",
      "package-name": "@compozy/tool-fetch",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/grep": {
      "release-type": "node",
      "package-name": "@compozy/tool-grep",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/list-dir": {
      "release-type": "node",
      "package-name": "@compozy/tool-list-dir",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/list-files": {
      "release-type": "node",
      "package-name": "@compozy/tool-list-files",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/read-file": {
      "release-type": "node",
      "package-name": "@compozy/tool-read-file",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    },
    "tools/write-file": {
      "release-type": "node",
      "package-name": "@compozy/tool-write-file",
      "include-component-in-tag": true,
      "include-v-in-tag": true,
      "tag-separator": "-"
    }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "compozy-monorepo",
      "components": [
        ".",
        "cmd/mcp-proxy",
        "tools/delete-file",
        "tools/exec",
        "tools/fetch",
        "tools/grep",
        "tools/list-dir",
        "tools/list-files",
        "tools/read-file",
        "tools/write-file"
      ]
    }
  ]
}
