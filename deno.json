{
    "nodeModulesDir": "auto",
    "workspace": [
        "pkg/**",
        "engine/**",
        "examples/**"
    ],
    "tasks": {
        "prettier:fix": "prettier --write \"**/*.@(js|ts|json|md|sh|yml|yaml)\"",
        "prettier:validate": "prettier --check \"**/*.@(js|ts|json|md|sh|yml|yaml)\"",
        "test:all": "deno test"
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "lineWidth": 100,
        "singleQuote": false
    },
    "compilerOptions": {
        "strict": true
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ]
        }
    }
}
