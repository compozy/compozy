{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "bun-types"
    ],
    "paths": {
      "@/*": [
        "docs/src/*"
      ],
      "@/.source": [
        "docs/.source/index.ts"
      ],
      "@/schemas/*": [
        "docs/src/schemas/*"
      ]
    }
  },
  "include": [
    "schemas/**/*",
    "examples/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".compozy",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
