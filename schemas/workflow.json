{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://json-schema.org/draft-07/schema/workflow-config",
  "$ref": "#/$defs/WorkflowConfig",
  "$defs": {
    "AgentActionConfig": {
      "properties": {
        "id": {
          "type": "string"
        },
        "prompt": {
          "type": "string",
          "format": "multiline"
        },
        "input": {
          "$ref": "#/$defs/InputSchema"
        },
        "output": {
          "$ref": "#/$defs/OutputSchema"
        },
        "with": {
          "$ref": "#/$defs/WithParams"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "AgentConfig": {
      "properties": {
        "id": {
          "type": "string"
        },
        "use": {
          "type": "string",
          "pattern": "^(agent|tool|task)\\((id|file|dep)=[^)]+\\)$"
        },
        "config": {
          "$ref": "#/$defs/ProviderConfig"
        },
        "instructions": {
          "type": "string",
          "format": "multiline"
        },
        "tools": {
          "items": {
            "$ref": "#/$defs/ToolConfig"
          },
          "type": "array"
        },
        "actions": {
          "items": {
            "$ref": "#/$defs/AgentActionConfig"
          },
          "type": "array"
        },
        "input": {
          "$ref": "#/$defs/InputSchema"
        },
        "output": {
          "$ref": "#/$defs/OutputSchema"
        },
        "with": {
          "$ref": "#/$defs/WithParams"
        },
        "env": {
          "$ref": "#/$defs/EnvMap"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Author": {
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "organization": {
          "type": "string"
        },
        "contributors": {
          "items": {
            "$ref": "#/$defs/Contributor"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Contributor": {
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "organization": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "EnvMap": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object"
    },
    "ErrorTransitionConfig": {
      "properties": {
        "next": {
          "type": "string"
        },
        "with": {
          "$ref": "#/$defs/WithParams"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "InputSchema": {
      "properties": {
        "type": true,
        "properties": {
          "additionalProperties": {
            "$ref": "#/$defs/Schema"
          },
          "type": "object"
        },
        "required": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "items": {
          "$ref": "#/$defs/Schema"
        },
        "description": {
          "type": "string"
        },
        "enum": {
          "items": true,
          "type": "array"
        },
        "additionalProperties": {
          "type": "boolean"
        },
        "pattern": {
          "type": "string"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "format": {
          "type": "string"
        },
        "allOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        },
        "anyOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        },
        "oneOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "OutputSchema": {
      "properties": {
        "type": true,
        "properties": {
          "additionalProperties": {
            "$ref": "#/$defs/Schema"
          },
          "type": "object"
        },
        "required": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "items": {
          "$ref": "#/$defs/Schema"
        },
        "description": {
          "type": "string"
        },
        "enum": {
          "items": true,
          "type": "array"
        },
        "additionalProperties": {
          "type": "boolean"
        },
        "pattern": {
          "type": "string"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "format": {
          "type": "string"
        },
        "allOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        },
        "anyOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        },
        "oneOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ProviderConfig": {
      "properties": {
        "provider": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "api_key": {
          "type": "string"
        },
        "api_url": {
          "type": "string"
        },
        "temperature": {
          "type": "number"
        },
        "max_tokens": {
          "type": "integer"
        },
        "top_p": {
          "type": "number"
        },
        "frequency_penalty": {
          "type": "number"
        },
        "presence_penalty": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Schema": {
      "properties": {
        "type": true,
        "properties": {
          "additionalProperties": {
            "$ref": "#/$defs/Schema"
          },
          "type": "object"
        },
        "required": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "items": {
          "$ref": "#/$defs/Schema"
        },
        "description": {
          "type": "string"
        },
        "enum": {
          "items": true,
          "type": "array"
        },
        "additionalProperties": {
          "type": "boolean"
        },
        "pattern": {
          "type": "string"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "format": {
          "type": "string"
        },
        "allOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        },
        "anyOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        },
        "oneOf": {
          "items": {
            "$ref": "#/$defs/Schema"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "SuccessTransitionConfig": {
      "properties": {
        "next": {
          "type": "string"
        },
        "with": {
          "$ref": "#/$defs/WithParams"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "TaskConfig": {
      "properties": {
        "id": {
          "type": "string"
        },
        "use": {
          "type": "string",
          "pattern": "^(agent|tool|task)\\((id|file|dep)=[^)]+\\)$"
        },
        "type": {
          "type": "string"
        },
        "on_success": {
          "$ref": "#/$defs/SuccessTransitionConfig"
        },
        "on_error": {
          "$ref": "#/$defs/ErrorTransitionConfig"
        },
        "final": {
          "type": "string"
        },
        "input": {
          "$ref": "#/$defs/InputSchema"
        },
        "output": {
          "$ref": "#/$defs/OutputSchema"
        },
        "with": {
          "$ref": "#/$defs/WithParams"
        },
        "env": {
          "$ref": "#/$defs/EnvMap"
        },
        "action": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "routes": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ToolConfig": {
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "execute": {
          "type": "string"
        },
        "use": {
          "type": "string",
          "pattern": "^(agent|tool|task)\\((id|file|dep)=[^)]+\\)$"
        },
        "input": {
          "$ref": "#/$defs/InputSchema"
        },
        "output": {
          "$ref": "#/$defs/OutputSchema"
        },
        "with": {
          "$ref": "#/$defs/WithParams"
        },
        "env": {
          "$ref": "#/$defs/EnvMap"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "TriggerConfig": {
      "properties": {
        "type": {
          "type": "string"
        },
        "webhook": {
          "$ref": "#/$defs/WebhookConfig"
        },
        "on_error": {
          "$ref": "#/$defs/ErrorTransitionConfig"
        },
        "input": {
          "$ref": "#/$defs/InputSchema"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "WebhookConfig": {
      "properties": {
        "url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "WithParams": {
      "type": "object"
    },
    "WorkflowConfig": {
      "properties": {
        "id": {
          "type": "string"
        },
        "tasks": {
          "items": {
            "$ref": "#/$defs/TaskConfig"
          },
          "type": "array"
        },
        "trigger": {
          "$ref": "#/$defs/TriggerConfig"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "author": {
          "$ref": "#/$defs/Author"
        },
        "tools": {
          "items": {
            "$ref": "#/$defs/ToolConfig"
          },
          "type": "array"
        },
        "agents": {
          "items": {
            "$ref": "#/$defs/AgentConfig"
          },
          "type": "array"
        },
        "env": {
          "$ref": "#/$defs/EnvMap"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  },
  "yamlCompatible": true
}
