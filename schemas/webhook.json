{
  "$defs": {
    "DedupeSpec": {
      "additionalProperties": false,
      "description": "DedupeSpec controls idempotency behavior for webhook requests.",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "key": {
          "type": "string"
        },
        "ttl": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "EventConfig": {
      "additionalProperties": false,
      "description": "EventConfig defines a single routable event within a webhook trigger.",
      "properties": {
        "filter": {
          "type": "string"
        },
        "input": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "schema": {
          "$ref": "#/$defs/Schema"
        }
      },
      "type": "object"
    },
    "Schema": {
      "type": "object"
    },
    "VerifySpec": {
      "additionalProperties": false,
      "description": "VerifySpec defines signature verification options for webhook requests.",
      "properties": {
        "header": {
          "type": "string"
        },
        "secret": {
          "type": "string"
        },
        "skew": {
          "type": "integer"
        },
        "strategy": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "$id": "webhook.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Config represents per-workflow webhook settings and routing events.",
  "properties": {
    "dedupe": {
      "$ref": "#/$defs/DedupeSpec"
    },
    "events": {
      "items": {
        "$ref": "#/$defs/EventConfig"
      },
      "type": "array"
    },
    "method": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "verify": {
      "$ref": "#/$defs/VerifySpec"
    }
  },
  "title": "Webhook Configuration",
  "type": "object",
  "yamlCompatible": true
}
